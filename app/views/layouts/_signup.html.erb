<div class='row text-center'>
  <h1>Sign up</h1>
</div>
<div class="row">
<div class="col-md-6 col-md-offset-3">
<%= form_for(@user, html: {class: "form-horizontal"}) do |f|%>
<div class='form-group'>
    <%= f.label :name, "Name", class: 'control-label col-lg-4' %>
    <div class='col-lg-6'>
      <%= f.text_field :name, class:"form-control"%>
    </div>
  
</div>
<div class='form-group'>
    <%= f.label :sex, "Sex", class: 'control-label col-lg-4' %>
    <div class='col-lg-6'>
      <label class='radio-inline'><%= radio_button(@user.class.to_s.downcase,'sex',0)%>Male</label>
      
      <label class='radio-inline'><%= radio_button(@user.class.to_s.downcase,'sex',1)%>Female</label>
    </div>
  
</div>
<div class='form-group'>
    <%= f.label :phone, "Phone", class: 'control-label col-lg-4' %>
    <div class='col-lg-6'>
      <%= f.text_field :phone, class:"form-control"%>
    </div>
  
</div>
<% if @user.class.to_s == 'Driver' %>
<div class='form-group'>
    <%= f.label :bond, "Bond", class: 'control-label col-lg-4' %>
    <div class='col-lg-6'>
      <%= f.text_field :bond, class:"form-control"%>
    </div>
</div>
<% end %>
<div class='form-group'>
    <%= f.label :email, "Email", class: 'control-label col-lg-4' %>
    <div class='col-lg-6'>
      <%= f.email_field :email, class:"form-control"%>
    </div>
</div>
<div class='form-group'>
    <%= f.label :password, "Password", class: 'control-label col-lg-4' %>
    <div class='col-lg-6'>
      <%= f.password_field :password, class:"form-control"%>
    </div>
</div>
<div class='form-group'>
    <%= f.label :password_confirmation, "Confirmation", class: 'control-label col-lg-4' %>
    <div class='col-lg-6'>
      <%= f.password_field :password_confirmation, class:"form-control"%>
    </div>
</div>
<div class='col-lg-4 col-lg-offset-5'>
  <%= f.submit "Create my account", class: "btn btn-primary" %>
</div>

<% end %>
</div>
</div>