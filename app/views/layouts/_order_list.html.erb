<table class='table'>
  <thead>
    <tr class='text-center'>
      <th class='text-center'>No</th>
      <th class='text-center'>Number</th>
      <th class='text-center'>Current Number</th>
      <th class='text-center'> Time</th>
      <th class='text-center'>Destination</th>
      <% if logged_in? %>
      <th class='text-center'>Operations</th>
      <%end%>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr class='text-center'>
        <td><%= order.id %></td>
        <td><%= order.number %></td>
        <td><%= order.cur_number%></td>
        <td><%= order.time%></td>
        <td><%= order.destination%></td>
        <td>
          <% if get_user_type == 'student'%>
        <div class='btn-group' role='group'>
            <% if can_join(order) %>
                <%= link_to 'Join', "/order/#{order.id}/join", method: 'patch', class: 'btn btn-default'%>
            <%end%>
            <% if can_edit(order) %>
                <%= link_to 'Edit', "/order/#{order.id}/edit", method: 'get', class: 'btn btn-default'%>
            <%end%>
            <% if can_delete(order) %>
            <button type='button' class='btn btn-default' data-toggle='modal' data-target=<%= "#delete_confirm_#{order.id}"%>>Delete</button>
            <div class="modal fade" id=<%= "delete_confirm_#{order.id}"%> tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            	<div class="modal-dialog">
            		<div class="modal-content">
            			<div class="modal-header">
            				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">
            					&times;
            				</button>
            				<h4 class="modal-title" >
            					Delete?
            				</h4>
            			</div>
            			<div class="modal-body">
            			  <table>
            			    <th>
            			      <tr> </tr><tr> </tr><tr> </tr><tr> </tr><tr> </tr>
            			    </th>
                        <tbody>
                      <tr class='text-center'>
                      <td class='col-md-2'><%= order.id %></td>
                      <td class='col-md-2'><%= order.number %></td>
                      <td class='col-md-2'><%= order.cur_number%></td>
                      <td class='col-md-4'><%= order.time%></td>
                      <td class='col-md-2'><%= order.destination%></td>
                    </tr>
                        </tbody>
   
                    </table>
            			</div>
            			<div class="modal-footer">
            				<button type="button" class="btn btn-default" data-dismiss="modal">Close
            				</button>
      
            				<%= link_to 'Delete', "/order/#{order.id}/delete", method: 'delete', class: 'btn btn-default'%>
            			</div>
            		</div><!-- /.modal-content -->
            	</div><!-- /.modal -->
            </div>
            <%end%>
            <% if can_quit(order) %>
              <button type='button' class='btn btn-default' data-toggle='modal' data-target=<%= "#quit_confirm_#{order.id}"%>>Quit</button>
            <div class="modal fade" id=<%= "quit_confirm_#{order.id}"%> tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            	<div class="modal-dialog">
            		<div class="modal-content">
            			<div class="modal-header">
            				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">
            					&times;
            				</button>
            				<h4 class="modal-title" >
            					Quit?
            				</h4>
            			</div>
            			<div class="modal-body">
            			  <table>
            			    <th>
            			      <tr> </tr><tr> </tr><tr> </tr><tr> </tr><tr> </tr>
            			    </th>
                        <tbody>
                      <tr class='text-center'>
                      <td class='col-md-2'><%= order.id %></td>
                      <td class='col-md-2'><%= order.number %></td>
                      <td class='col-md-2'><%= order.cur_number%></td>
                      <td class='col-md-4'><%= order.time%></td>
                      <td class='col-md-2'><%= order.destination%></td>
                    </tr>
                        </tbody>
   
                    </table>
            			</div>
            			<div class="modal-footer">
            				<button type="button" class="btn btn-default" data-dismiss="modal">Close
            				</button>
      
            				<%= link_to 'Quit', "/order/#{order.id}/quit", method: 'patch', class: 'btn btn-default'%>
            			</div>
            		</div><!-- /.modal-content -->
            	</div><!-- /.modal -->
            </div>
            <% end%>
            <%if accepted order %>
              <%= link_to 'Driver', "/order/#{order.id}/driver", method: 'get', class: 'btn btn-default'%>
            <%end%>
        </div>
<% elsif get_user_type == 'driver' %>

<% elsif get_user_type == 'manager'%>

<%else%>

<%end%>
        </td>
      </tr>    
    <% end %> 
  </tbody>
  <tfoot>
     
  </tfoot>
   
  
</table>
<%= will_paginate @orders ,renderer: BootstrapPagination::Rails%>